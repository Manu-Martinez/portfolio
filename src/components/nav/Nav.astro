---
import NavBtn from "./NavBtn.astro";
import "../../styles/global.css";
---



<nav class="fixed flex justify-center top-5 left-0 right-0 z-[50] nav">
  <div class="h-10 w-[.15rem] bg-gradient-to-b from-transparent via-amber-300 to-transparent"></div>
  <div class="navBtns fixed flex justify-center overflow-hidden top-0 left-0 right-0 z-[50] bg-[#f8fafc15] filter backdrop-blur-sm">
    <NavBtn to="/#">Home</NavBtn>
    <NavBtn to="/#about">About</NavBtn>
    <NavBtn to="/#projects">Projects</NavBtn>
    <NavBtn to="/#contact">Contact</NavBtn>
  </div>
  <div class="h-10 w-[.15rem] bg-gradient-to-b from-transparent via-amber-300 to-transparent"></div>
</nav>

<style>
  .nav {
  position: fixed;
  display: flex;
  justify-content: center;
  top: 2px;
  left: 0;
  right: 0;
  z-index: 50;
  margin: 20px;
  animation-name: nav;
  animation-duration: 2.5s;
  animation-iteration-count: 1;
}


  .hidden {
    display: none;
  }
  @keyframes nav {
    0% {
      opacity: 0;
    }
    85% {
      opacity: 0;
    }
    100% {
      opacity: 100%;
    }
  }

  .navBtns {
	position: fixed;
  display: flex;
  justify-content: center;
  overflow: hidden;
  left: 50%;
  transform: translateX(-50%);
  z-index: 50;
    transition: all;
    animation-name: navBtns;
    animation-timing-function: ease-in-out;
    animation-duration: 3s;
    animation-iteration-count: 1;
  }

  @keyframes navBtns {
    0% {
      width: 0;
    }
    85% {
      width: 0;
    }
  }
</style>
