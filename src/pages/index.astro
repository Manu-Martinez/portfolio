---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import DataProjects from '../components/DataProjects.astro';
import DevProjects from '../components/DevProjects.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Manu Martínez - Data Analyst">
	<Navbar />
	<Hero />
	<About />
	<DataProjects>
	  <ProjectCard
		title="Análisis de Ventas"
		description="Análisis de datos de ventas con Python y Power BI, identificando tendencias y oportunidades."
		image="/images/data-project1.png"
		github="https://github.com/Manu-Martinez/Analisis-Matriculacion-Vehiculos-Argentina"
		demo="https://powerbi.com/tu-dashboard"
	  />
	  <ProjectCard
		title="Análisis de Aptitud para Préstamos"
		description="Análisis de datos de préstamos en Argentina con Python y Tableau, evaluando tasas de aprobación e ingresos por segmento."
		image="/images/data-project1.png"
		github="https://github.com/Manu-Martinez/prestamos-argentina"
		demo="https://github.com/Manu-Martinez/prestamos-argentina#dashboards-interactivos"
	  />
	  <!-- Agrega más proyectos de datos aquí -->
	</DataProjects>
	<DevProjects>
	  <ProjectCard
		title="Prompt Library"
		description="Aplicación web para compartir AI prompts."
		image="/images/dev-project1.jpg"
		github="https://github.com/Manu-Martinez/prompt_library"
		demo="https://prompt-library-six.vercel.app/"
	  />
	  <!-- Agrega más proyectos de desarrollo aquí -->
	</DevProjects>
	<Contact />
	<Footer />
	<script>
		import '../scripts/main.js';
	  </script>	
  </Layout>
  
  